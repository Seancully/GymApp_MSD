        app:layout_constraintTop_toBottomOf="@+id/quoteButton8" />

    <Button
        android:id="@+id/quoteButton10"
        android:layout_width="372dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:background="#D2C271CC"
        android:text="~Chase goals, not dreams.~"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteButton9" />

    <Button
        android:id="@+id/quoteButton11"
        android:layout_width="372dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:background="#D2C271CC"
        android:text="~Small steps, big changes.~"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteButton10" />

    <Button
        android:id="@+id/quoteButton12"
        android:layout_width="372dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:background="#D2C271CC"
        android:text="~Be your own hero.~"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteButton11" />

    <Button
        android:id="@+id/resetQuotesButton"
        android:layout_width="372dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:background="#75C9924F"
        android:text="Reset Quotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quoteButton12" />




</androidx.constraintlayout.widget.ConstraintLayout>