        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:background="#D2C271CC"
        android:text="~Stay focused and never give up.~"
        app:layout_constraintEnd_toEndOf="parent"
